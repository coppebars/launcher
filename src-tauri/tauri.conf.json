{
  "build": {
    "beforeDevCommand": "yarn workspace @app/entrypoint vite",
    "beforeBuildCommand": "yarn workspace @app/entrypoint vite build",
    "devPath": "http://localhost:1420",
    "distDir": "../app/entrypoint/dist"
  },
  "package": {
    "productName": "ctlauncher",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
			"path": {
				"all": true
			},
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.coppertiles.launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Coppertiles Launcher",
				"decorations": false,
				"transparent": true,
        "width": 800,
        "height": 600
      }
    ]
  }
}
