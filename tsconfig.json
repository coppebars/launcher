{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@app/entrypoint": [
        "app/entrypoint"
      ],
      "@app/providers": [
        "app/providers"
      ],
      "@app/root": [
        "app/root"
      ]
    }
  },
  "include": [
    "**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
