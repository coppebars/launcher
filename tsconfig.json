{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@app/entrypoint": [
        "app/entrypoint"
      ],
      "@app/providers": [
        "app/providers"
      ],
      "@app/root": [
        "app/root"
      ],
      "@app/routes": [
        "app/routes"
      ],
      "@entity/instance": [
        "entities/instance"
      ],
      "@entity/profile": [
        "entities/profile"
      ],
      "@entity/settings": [
        "entities/settings"
      ],
      "@entity/version": [
        "entities/version"
      ],
      "@feature/create-or-edit-instance": [
        "features/create-or-edit-instance"
      ],
      "@feature/launch": [
        "features/launch"
      ],
      "@feature/lookup": [
        "features/lookup"
      ],
      "@layout/padded": [
        "layouts/padded"
      ],
      "@layout/sidebar": [
        "layouts/sidebar"
      ],
      "@layout/sided": [
        "layouts/sided"
      ],
      "@page/home": [
        "pages/home"
      ],
      "@page/profiles": [
        "pages/profiles"
      ],
      "@page/settings": [
        "pages/settings"
      ],
      "core": [
        "shared/core"
      ],
      "indexed-db": [
        "shared/lib/indexed-db"
      ],
      "props-of": [
        "shared/lib/props-of"
      ],
      "@theme/css": [
        "shared/theme/css"
      ],
      "@theme/fonts": [
        "shared/theme/fonts"
      ],
      "@theme/global": [
        "shared/theme/global"
      ],
      "@theme/provider": [
        "shared/theme/provider"
      ],
      "@theme/schema": [
        "shared/theme/schema"
      ],
      "@theme/schema/base": [
        "shared/theme/schema/base.ts"
      ],
      "@theme/vars": [
        "shared/theme/vars"
      ],
      "@ui/extra": [
        "shared/ui/extra"
      ],
      "@ui/mantine": [
        "shared/ui/mantine"
      ],
      "@widget/settings": [
        "widgets/settings"
      ],
      "@widget/sidebar": [
        "widgets/sidebar"
      ]
    }
  },
  "include": [
    "**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
